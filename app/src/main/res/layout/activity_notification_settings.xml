<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hannah.tentapp.NotificationSettings">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tentamensanmälan öppnar"
        android:textSize="20dp"
        android:id="@+id/switchTentaOpen"
        android:layout_marginTop="83dp"
        android:checked="false"
        android:layout_below="@+id/noticeText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/switchTentaClose"
        android:layout_alignEnd="@+id/switchTentaClose" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tentamensanmälan stänger"
        android:textSize="20dp"
        android:id="@+id/switchTentaClose"
        android:checked="false"
        android:layout_below="@+id/switchTentaOpen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_alignRight="@+id/textView11"
        android:layout_alignEnd="@+id/textView11" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uppdatering av tentainformation"
        android:textSize="20dp"
        android:id="@+id/switchTentaInfo"
        android:checked="false"
        android:layout_below="@+id/switchTentaClose"
        android:layout_marginTop="75dp"
        android:layout_alignRight="@+id/switchTentaClose"
        android:layout_alignEnd="@+id/switchTentaClose"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Notiser"
        android:textSize="20dp"
        android:gravity="center"
        android:id="@+id/noticeText"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/switchTentaOpen"
        android:layout_alignEnd="@+id/switchTentaOpen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Välj tillfällen du vill ha notiser om:"
        android:id="@+id/textView11"
        android:layout_below="@+id/noticeText"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
